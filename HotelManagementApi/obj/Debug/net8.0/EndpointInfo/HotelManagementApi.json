  "components": {
    "schemas": {
      "CreateBookingDetailDto": {
        "required": [
          "checkInDate",
          "checkOutDate",
          "pricePerNight",
          "roomID",
          "roomTypeID"
        ],
        "type": "object",
        "properties": {
          "roomID": {
            "type": "integer",
            "format": "int32"
          },
          "roomTypeID": {
            "type": "integer",
            "format": "int32"
          },
          "checkInDate": {
            "type": "string",
            "format": "date-time"
          },
          "checkOutDate": {
            "type": "string",
            "format": "date-time"
          },
          "pricePerNight": {
            "maximum": 100000000,
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "CreateBookingDto": {
        "required": [
          "adultCount",
          "bookingDetails",
          "totalAmount",
          "userID"
        ],
        "type": "object",
        "properties": {
          "userID": {
            "type": "integer",
            "format": "int32"
          },
          "adultCount": {
            "maximum": 20,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "childCount": {
            "maximum": 10,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "totalAmount": {
            "maximum": 100000000,
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "depositAmount": {
            "maximum": 100000000,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "notes": {
            "maxLength": 1000,
            "type": "string",
            "nullable": true
          },
          "bookingDetails": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateBookingDetailDto"
            }
          }
        },
        "additionalProperties": false
      },
      "CreateRoomDto": {
        "required": [
          "floor",
          "roomNumber",
          "roomTypeID"
        ],
        "type": "object",
        "properties": {
          "roomNumber": {
            "maxLength": 10,
            "minLength": 1,
            "type": "string"
          },
          "floor": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "roomTypeID": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateRoomTypeDto": {
        "required": [
          "bedType",
          "typeName"
        ],
        "type": "object",
        "properties": {
          "typeName": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "basePrice": {
            "maximum": 100000000,
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "capacity": {
            "type": "integer",
            "format": "int32"
          },
          "bedType": {
            "minLength": 1,
            "type": "string"
          },
          "areaSqm": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "refreshToken": {
            "type": "string",
            "nullable": true
          },
          "expires": {
            "type": "string",
            "format": "date-time"
          },
          "user": {
            "$ref": "#/components/schemas/UserInfo"
          }
        },
        "additionalProperties": false
      },
      "UpdateBookingStatusDto": {
        "required": [
          "bookingStatus"
        ],
        "type": "object",
        "properties": {
          "bookingStatus": {
            "minLength": 1,
            "pattern": "^(Confirmed|Check-in|Check-out|Cancelled|No-show)$",
            "type": "string"
          },
          "cancelReason": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdateRoomDto": {
        "type": "object",
        "properties": {
          "roomNumber": {
            "maxLength": 10,
            "type": "string",
            "nullable": true
          },
          "floor": {
            "maximum": 100,
            "minimum": 1,
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdateRoomTypeDto": {
        "required": [
          "bedType",
          "typeName"
        ],
        "type": "object",
        "properties": {
          "typeName": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "basePrice": {
            "maximum": 100000000,
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "capacity": {
            "type": "integer",
            "format": "int32"
          },
          "bedType": {
            "minLength": 1,
            "type": "string"
          },
          "areaSqm": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserInfo": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "fullName": {
            "type": "string",
            "nullable": true
          },
          "role": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. Enter 'Bearer' [space] and then your token in the text input below.",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
